<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">
    <!-- Vehicle types -->
    <vType id="ego_car" accel="2.5" decel="4.5" sigma="0.5" length="5.0" minGap="2.5" maxSpeed="30.0" color="1,0,0"/>
    <vType id="normal_car" accel="2.0" decel="4.0" sigma="0.5" length="5.0" minGap="2.5" maxSpeed="25.0" color="0,0,1"/>
    <vType id="truck" accel="1.0" decel="3.0" sigma="0.5" length="10.0" minGap="3.0" maxSpeed="20.0" color="0,1,0"/>
    
    <!-- Ego vehicle -->
    <vehicle id="ego" type="ego_car" depart="0" departLane="1" departSpeed="20.0">
        <route edges="highway"/>
    </vehicle>
    
    <!-- Light traffic (10 vehicles) -->
    <flow id="light_flow_1" type="normal_car" begin="0" end="1000" vehsPerHour="100" departLane="0" departSpeed="max">
        <route edges="highway"/>
    </flow>
    <flow id="light_flow_2" type="normal_car" begin="0" end="1000" vehsPerHour="100" departLane="1" departSpeed="max">
        <route edges="highway"/>
    </flow>
    <flow id="light_flow_3" type="normal_car" begin="0" end="1000" vehsPerHour="50" departLane="2" departSpeed="max">
        <route edges="highway"/>
    </flow>
    <flow id="light_truck_flow" type="truck" begin="0" end="1000" vehsPerHour="50" departLane="0" departSpeed="max">
        <route edges="highway"/>
    </flow>
    
    <!-- Medium traffic (30 vehicles) -->
    <flow id="medium_flow_1" type="normal_car" begin="200" end="1000" vehsPerHour="300" departLane="0" departSpeed="max">
        <route edges="highway"/>
    </flow>
    <flow id="medium_flow_2" type="normal_car" begin="200" end="1000" vehsPerHour="300" departLane="1" departSpeed="max">
        <route edges="highway"/>
    </flow>
    <flow id="medium_flow_3" type="normal_car" begin="200" end="1000" vehsPerHour="150" departLane="2" departSpeed="max">
        <route edges="highway"/>
    </flow>
    <flow id="medium_truck_flow" type="truck" begin="200" end="1000" vehsPerHour="150" departLane="0" departSpeed="max">
        <route edges="highway"/>
    </flow>
    
    <!-- Heavy traffic (50 vehicles) -->
    <flow id="heavy_flow_1" type="normal_car" begin="400" end="1000" vehsPerHour="600" departLane="0" departSpeed="max">
        <route edges="highway"/>
    </flow>
    <flow id="heavy_flow_2" type="normal_car" begin="400" end="1000" vehsPerHour="600" departLane="1" departSpeed="max">
        <route edges="highway"/>
    </flow>
    <flow id="heavy_flow_3" type="normal_car" begin="400" end="1000" vehsPerHour="300" departLane="2" departSpeed="max">
        <route edges="highway"/>
    </flow>
    <flow id="heavy_truck_flow" type="truck" begin="400" end="1000" vehsPerHour="300" departLane="0" departSpeed="max">
        <route edges="highway"/>
    </flow>
</routes> 